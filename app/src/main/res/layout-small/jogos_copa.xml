<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/cor_tab_copa">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/pontos4"
            android:layout_width="27dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/imgBand4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView23"
            app:layout_constraintTop_toBottomOf="@+id/txtDataPartida2" />

        <TextView
            android:id="@+id/ponto3"
            android:layout_width="27dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/textView23"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imgBand3"
            app:layout_constraintTop_toBottomOf="@+id/txtDataPartida2" />

        <TextView
            android:id="@+id/ponto2"
            android:layout_width="27dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/imgBand2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView22"
            app:layout_constraintTop_toBottomOf="@+id/txtDataPartida" />

        <ImageView
            android:id="@+id/imgBand4"
            android:layout_width="30dp"
            android:layout_height="18dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/bandeira_de_selecao"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toStartOf="@+id/txtSelecao4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/pontos4"
            app:layout_constraintTop_toBottomOf="@+id/txtDataPartida2" />

        <ImageView
            android:id="@+id/imgBand3"
            android:layout_width="30dp"
            android:layout_height="18dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/bandeira_de_selecao"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toStartOf="@+id/ponto3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/txtSelecao3"
            app:layout_constraintTop_toBottomOf="@+id/txtDataPartida2" />

        <ImageView
            android:id="@+id/imgBand2"
            android:layout_width="30dp"
            android:layout_height="18dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/bandeira_de_selecao"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toStartOf="@+id/txtSelecao2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/ponto2"
            app:layout_constraintTop_toBottomOf="@+id/txtDataPartida" />

        <TextView
            android:id="@+id/txtTituloPartida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:textColor="@color/wallet_bright_foreground_holo_light"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/imgBtnProximo"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imgBtnVoltar"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtDataPartida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/wallet_bright_foreground_holo_light"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtTituloPartida" />

        <TextView
            android:id="@+id/txtSelecao1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/wallet_bright_foreground_holo_light"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/imgBand1"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtDataPartida" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="X"
            android:textColor="@color/wallet_bright_foreground_holo_light"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/ponto2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/ponto1"
            app:layout_constraintTop_toBottomOf="@+id/txtDataPartida" />

        <TextView
            android:id="@+id/txtSelecao2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/wallet_bright_foreground_holo_light"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imgBand2"
            app:layout_constraintTop_toBottomOf="@+id/txtDataPartida" />

        <TextView
            android:id="@+id/txtDataPartida2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/wallet_bright_foreground_holo_light"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView22" />

        <TextView
            android:id="@+id/txtSelecao3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/wallet_bright_foreground_holo_light"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/imgBand3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtDataPartida2" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="X"
            android:textColor="@color/wallet_bright_foreground_holo_light"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/pontos4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/ponto3"
            app:layout_constraintTop_toBottomOf="@+id/txtDataPartida2" />

        <TextView
            android:id="@+id/txtSelecao4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/wallet_bright_foreground_holo_light"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imgBand4"
            app:layout_constraintTop_toBottomOf="@+id/txtDataPartida2" />

        <ImageView
            android:id="@+id/imgBand1"
            android:layout_width="30dp"
            android:layout_height="18dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/bandeira_de_selecao"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toStartOf="@+id/ponto1"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/txtSelecao1"
            app:layout_constraintTop_toBottomOf="@+id/txtDataPartida" />

        <ImageButton
            android:id="@+id/imgBtnProximo"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="8dp"
            android:background="@color/cardview_shadow_start_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/txtTituloPartida"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_keyboard_arrow_right_branco_24dp" />

        <ImageButton
            android:id="@+id/imgBtnVoltar"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="8dp"
            android:background="@color/cardview_shadow_start_color"
            app:layout_constraintEnd_toStartOf="@+id/txtTituloPartida"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_keyboard_arrow_left_branco_24dp" />

        <TextView
            android:id="@+id/ponto1"
            android:layout_width="27dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/textView22"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imgBand1"
            app:layout_constraintTop_toBottomOf="@+id/txtDataPartida" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>