<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lay_copa"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/cor_tab_copa">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04000002">

        <TableRow
            android:id="@+id/row1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="26dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/selecoes"
                android:textAlignment="center"
                android:textColor="@color/cast_expanded_controller_background_color"
                android:textStyle="bold" />

            <TextView
                android:layout_width="21dp"
                android:layout_height="wrap_content"
                android:text="@string/pont"
                android:textAlignment="center"
                android:textColor="@color/cast_expanded_controller_background_color"
                android:textStyle="bold" />

            <TextView
                android:layout_width="21dp"
                android:layout_height="wrap_content"
                android:text="@string/vitorias"
                android:textAlignment="center"
                android:textColor="@color/cast_expanded_controller_background_color"
                android:textStyle="bold" />

            <TextView
                android:layout_width="21dp"
                android:layout_height="wrap_content"
                android:text="@string/empates"
                android:textAlignment="center"
                android:textColor="@color/cast_expanded_controller_background_color"
                android:textStyle="bold" />

            <TextView
                android:layout_width="21dp"
                android:layout_height="wrap_content"
                android:text="@string/derrota"
                android:textAlignment="center"
                android:textColor="@color/cast_expanded_controller_background_color"
                android:textStyle="bold" />

            <TextView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:text="@string/gols_feitos"
                android:textAlignment="center"
                android:textColor="@color/cast_expanded_controller_background_color"
                android:textStyle="bold" />

            <TextView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:text="@string/gols_sofridos"
                android:textAlignment="center"
                android:textColor="@color/cast_expanded_controller_background_color"
                android:textStyle="bold" />

            <TextView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:text="@string/saldo_gols"
                android:textAlignment="center"
                android:textColor="@color/cast_expanded_controller_background_color"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:id="@+id/row2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>

        <TableRow
            android:id="@+id/row3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>

        <TableRow
            android:id="@+id/row4"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>

        <TableRow
            android:id="@+id/row5"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>
    </TableLayout>

</android.support.constraint.ConstraintLayout>
