<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtDataMata_Mata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtSelecaoP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/bandeiraP"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:contentDescription="@string/bandeira_de_selecao"
                android:scaleType="fitXY"
                app:srcCompat="@android:drawable/btn_star" />

            <TextView
                android:id="@+id/txtMatMat_ponto1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="x"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtMatMat_ponto2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0" />

            <ImageView
                android:id="@+id/bandeiraS"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:contentDescription="@string/bandeira_de_selecao"
                android:scaleType="fitXY"
                app:srcCompat="@android:drawable/btn_star" />

            <TextView
                android:id="@+id/txtSelecaoS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAlignment="textEnd"
                android:textSize="18sp" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>